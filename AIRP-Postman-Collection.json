          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Journal - Expense",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.success && jsonData.data.journalId) {",
              "        pm.collectionVariables.set('journalId', jsonData.data.journalId);",
              "        console.log('Journal ID saved: ' + jsonData.data.journalId);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"entityId\": \"{{entityId}}\",\n  \"bookIds\": [\"{{bookId}}\"],\n  \"journalDate\": \"2025-10-15\",\n  \"description\": \"Office rent payment\",\n  \"lines\": [\n    {\n      \"lineNumber\": 1,\n      \"accountId\": \"{{rentAccountId}}\",\n      \"debit\": 3000,\n      \"credit\": 0,\n      \"description\": \"Monthly rent\"\n    },\n    {\n      \"lineNumber\": 2,\n      \"accountId\": \"{{cashAccountId}}\",\n      \"debit\": 0,\n      \"credit\": 3000,\n      \"description\": \"Cash payment\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ledger/journals",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ledger", "journals"]
        }
      }
    },
    {
      "name": "Post Journal",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/ledger/journals/{{journalId}}/post",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ledger", "journals", "{{journalId}}", "post"]
        }
      }
    },
    {
      "name": "Create Journal - Revenue",
      "request": {
        "method": "POST",
